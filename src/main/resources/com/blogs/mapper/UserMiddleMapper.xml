<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blogs.mapper.UserMiddleMapper">
  <select id="findUserMiddle" resultType="java.lang.Integer">
    SELECT COUNT(*) AS total_count
    FROM user_middle
    WHERE `user_id` = #{userId}
      AND `flag` = #{flag}
  </select>
</mapper>